{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "strict": 0,
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "babel/semi": 1
    },
    "env": {
        "es6":true
    },
    "plugins": [
        "react",
        "babel"
    ]
}